# Dutch Learning AI Assistant - Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# Server Settings
# ============================================================================
HOST=0.0.0.0
PORT=8080
DEBUG=true

# ============================================================================
# Directories
# ============================================================================
DATA_DIR=./data
LOGS_DIR=./logs

# ============================================================================
# AI Providers
# ============================================================================
# OpenAI (optional - for GPT-4/GPT-3.5)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Anthropic (optional - for Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama (local LLM - recommended for Pi)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# ============================================================================
# Camera Settings
# ============================================================================
CAMERA_ENABLED=true
CAMERA_VFLIP=true
CAMERA_HFLIP=true
FORCE_USB_CAMERA=false
USE_AI_HAT_CAMERA=true
VIRTUAL_CAMERA_DEVICE=/dev/video10

# ============================================================================
# Audio Settings
# ============================================================================
AUDIO_INPUT_DEVICE=
AUDIO_OUTPUT_DEVICE=
AUDIO_ENABLED=true

# ============================================================================
# MCP Server Settings
# ============================================================================
MCP_ENABLED=true
MCP_PORT=8081

# ============================================================================
# Dutch Learning
# ============================================================================
DUTCH_VOCABULARY_DB=./data/dutch_vocab.db
PROGRESS_TRACKING=true
LIBRE_TRANSLATE_URL=https://libretranslate.com

# ============================================================================
# Personal Assistant (Optional)
# ============================================================================
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CALENDAR_CREDENTIALS=
TODOIST_API_KEY=
NOTION_API_KEY=

# ============================================================================
# E-Commerce (Optional)
# ============================================================================
AMAZON_API_KEY=
STRIPE_API_KEY=

# ============================================================================
# Knowledge Base (Optional)
# ============================================================================
BRAVE_SEARCH_API_KEY=
WIKIPEDIA_ENABLED=true
SERPER_API_KEY=

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/assistant.log
